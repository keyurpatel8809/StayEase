<% layout("layouts/boilerplate") %>

<body>
  <!-- <form action="/listings/new" method="GET">
        <button>Create New Listing</button>
    </form> -->

  <div id="filters">
    <a href="/listings?category=Trending" class="filter-category"
      data-category="Trending">
      <div class="filter category">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    </a>
    <a href="/listings?category=Rooms" class="filter-category"
      data-category="Rooms">
      <div class="filter category">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
    </a>
    <a href="/listings?category=IconicCities" class="filter-category"
      data-category="IconicCities">
      <div class="filter category">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
    </a>
    <a href="/listings?category=Mountains" class="filter-category"
      data-category="Mountains">
      <div class="filter category">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
    </a>
    <a href="/listings?category=Castles" class="filter-category"
      data-category="Castles">
      <div class="filter category">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
    </a>
    <a href="/listings?category=AmazingPools" class="filter-category"
      data-category="AmazingPools">
      <div class="filter category">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
    </a>
    <a href="/listings?category=Camping" class="filter-category"
      data-category="Camping">
      <div class="filter category">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
    </a>
    <a href="/listings?category=Farms" class="filter-category"
      data-category="Farms">
      <div class="filter category">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
    </a>
    <a href="/listings?category=Arctic" class="filter-category"
      data-category="Arctic">
      <div class="filter category">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
    </a>
    <a href="/listings?category=Domes" class="filter-category"
      data-category="Domes">
      <div class="filter category">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
    </a>
    <a href="/listings?category=Boats" class="filter-category"
      data-category="Boats">
      <div class="filter category">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
      </div>
    </a>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox"
          id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">
          Display total after taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top"
          alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay">Book & Enjoy your Vacation!</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN"):
            "N/A" %> / night
            <i class="text-info"> &nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

</body>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("text-info");
    Array.from(taxInfo).forEach(info => { 
      if(info.style.display != "inline") {
        info.style.display = "inline";
      }else {
        info.style.display = "none";
      }
    });
  });
</script>
